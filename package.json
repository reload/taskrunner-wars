{
  "name": "Test",
  "version": "0.1.0",
  "devDependencies": {
    "node-sass": "latest",
    "coffee-script": "latest",
    "chokidar-cli": "latest",
    "parallelshell": "latest"
  },
  "dependencies": {
    "bourbon": "latest"
  },
  "scripts": {
    "build:css"   : "node-sass sass/ -o css/ --source-map=true",
    "watch:css"   : "chokidar sass/ -c 'npm run build:css'",
    "build:js"    : "coffee --compile --output js/ coffeescript/",
    "watch:js"    : "chokidar coffeescript/ -c 'npm run build:js'",
    "build"       : "npm run build:css && npm run build:js",
    "build:watch" : "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "postinstall" : "rm -rf sass/bourbon && ln -s ../node_modules/bourbon/app/assets/stylesheets/ sass/bourbon"
  }
}
